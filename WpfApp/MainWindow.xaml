<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="PromoApp" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <TextBlock Text="Управление промокодами" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" Grid.Row="0"/>
        <Grid Margin="10" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBox x:Name="ActivationPromocodeTextBox" Width="200" Height="30" MaxLength="8" FontSize="16"/>
                <Button Content="Активировать" Width="150" Height="30" Margin="10,0,0,0" Background="#4CAF50" Foreground="White" Click="ActivatePromocodeButton_Click"/>
            </StackPanel>

            <ListBox x:Name="ActivationResultListBox" Grid.Row="1" FontSize="16"/>
        </Grid>
    </Grid>
    
</Window>
