<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="PromoApp" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Управление промокодами" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" Grid.Row="0"/>
        <TabControl Grid.Row="1" Margin="0,20,0,0">
            <TabItem Header="Активация">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBox x:Name="ActivationPromocodeTextBox" Width="200" Height="30" MaxLength="8" FontSize="16"/>
                        <Button Content="Активировать" Width="150" Height="30" Margin="10,0,0,0" Background="#4CAF50" Foreground="White" Click="ActivatePromocodeButton_Click"/>
                    </StackPanel>

                    <ListBox x:Name="ActivationResultListBox" Grid.Row="1" FontSize="16"/>
                </Grid>
            </TabItem>

            <TabItem Header="Активированные">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="ActivePromocodeListBox" Grid.Row="0" FontSize="16">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True" Margin="0,2">
                                    <Button Content="Удалить" Width="70" DockPanel.Dock="Right" Margin="5,0,0,0"
                                    Background="#f44336" Foreground="White" Click="DeleteActivePromocodeButton_Click"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBlock Text="Количество: " FontWeight="Bold"/>
                        <TextBlock x:Name="ActivePromocodeCountLabel" Text="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <TabItem Header="Неактивированные">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBox x:Name="NewPromocodeTextBox" Width="200" Height="30" MaxLength="8" FontSize="16"/>
                        <Button Content="Добавить" Width="100" Height="30" Margin="10,0,0,0" Background="#2196F3" Foreground="White" Click="AddNewPromocodeButton_Click"/>
                    </StackPanel>

                    <ListBox x:Name="InactivePromocodeListBox" Grid.Row="1" FontSize="16">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel LastChildFill="True" Margin="0,2">
                                    <Button Content="Удалить" Width="70" DockPanel.Dock="Right" Margin="5,0,0,0"
                            Background="#f44336" Foreground="White" Click="DeleteInactivePromocodeButton_Click"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBlock Text="Количество: " FontWeight="Bold"/>
                        <TextBlock x:Name="InactivePromocodeCountLabel" Text="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
