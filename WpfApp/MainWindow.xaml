<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="PromoApp" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Управление промокодами" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" Grid.Row="0"/>
        <TabControl Grid.Row="1" Margin="0,20,0,0">
            <TabItem Header="Активация">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="ActivationPromocodeTextBox"
                                 Width="200"
                                 Height="30"
                                 FontSize="14"/>
                        <Button Content="Активировать"
                                Background="#4CAF50"
                                Foreground="White"
                                Margin="10,0,0,0"
                                Click="ActivatePromocodeButton_Click"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Text="Результат:" FontWeight="Bold"/>
                    <ListBox x:Name="ActivationResultListBox" Grid.Row="2"/>
                </Grid>
            </TabItem>

            <TabItem Header="Активированные">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox x:Name="ActivePromocodeListBox" FontSize="14">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0,2">
                                    <Button Content="Удалить"
                                            DockPanel.Dock="Right"
                                            Background="#f44336"
                                            Foreground="White"
                                            Click="DeleteActivePromocodeButton_Click"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Code}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding StartDate, StringFormat='Начало: {0:d}'}"
                                                   FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='Окончание: {0:d}'}"
                                                   FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBlock Text="Количество: " FontWeight="Bold"/>
                        <TextBlock x:Name="ActivePromocodeCountLabel" Text="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>


            <TabItem Header="Неактивированные">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
                        <TextBox x:Name="NewPromocodeTextBox"
                                 Width="200"
                                 Height="30"
                                 MaxLength="10"
                                 FontSize="14"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <DatePicker x:Name="StartDatePicker" Width="150"/>
                            <DatePicker x:Name="EndDatePicker" Width="150" Margin="10,0,0,0"/>
                            <CheckBox x:Name="UnlimitedCheckBox" Content="Бессрочный"
                                      VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                        <Button Content="Добавить промокод"
                                Background="#2196F3"
                                Foreground="White"
                                Click="AddNewPromocodeButton_Click"/>
                    </StackPanel>

                    <ListBox x:Name="InactivePromocodeListBox" Grid.Row="1" FontSize="14">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="0,2">
                                    <Button Content="Удалить"
                                            DockPanel.Dock="Right"
                                            Background="#f44336"
                                            Foreground="White"
                                            Click="DeleteInactivePromocodeButton_Click"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Code}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding StartDate, StringFormat='Начало: {0:d}'}"
                                                   FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat='Окончание: {0:d}'}"
                                                   FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="0,10,0,0">
                        <TextBlock Text="Количество: " FontWeight="Bold"/>
                        <TextBlock x:Name="InactivePromocodeCountLabel" Text="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
